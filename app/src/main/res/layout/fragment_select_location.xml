<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sptuts.newmaterial.SelectLocationFragment">

    <include
        android:id="@+id/toolbarLay"
        layout="@layout/toolbar_layout" />

    <AutoCompleteTextView
        android:id="@+id/autocomplete_places"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/abc_action_bar_content_inset_material"
        android:hint="@string/autocomplete_hint"
        android:textColor="@android:color/primary_text_light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/powered_by_google_light" />

    <android.support.v7.widget.CardView
        android:id="@+id/selectedLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        cardview:cardBackgroundColor="#FFFFFF"
        cardview:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/icn_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_selectedloc_30_5" />

            <TextView
                android:id="@+id/tvSelectedLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/icn_selected"
                android:text="Selected Location"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvSelectedLocDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSelectedLoc"
                android:layout_toRightOf="@+id/icn_selected"
                android:text="#326, Ground Floor, Royal County Phase 2, JP Nagar 8th Phase, Bangalore - 500076"
                android:textSize="15sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/currentLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        cardview:cardBackgroundColor="#FFFFFF"
        cardview:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/icn_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginRight="16dp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/ic_currentloc_30_5" />

            <TextView
                android:id="@+id/tvCurrentLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/icn_current"
                android:text="Current Location"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCurrentLocDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurrentLoc"
                android:layout_toRightOf="@+id/icn_current"
                android:text="#301,Eden Enclave, Manikonda, Hyderabad - 500076"
                android:textSize="15sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvLocations"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
